@model SchoolRegister.ViewModels.VM.AddOrUpdateGroupVm

@{
    ViewData["Title"] = Model.Id == 0 ? "Dodaj nową klasę" : "Edytuj klasę";
}

<h2 class="text-center mt-4">@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4>@(Model.Id == 0 ? "➕ Dodaj nową klasę" : "✏️ Edytuj klasę")</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Group" asp-action="AddOrUpdateGroup" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Nazwa klasy</label>
                    <input asp-for="Name" class="form-control" placeholder="Wpisz nazwę klasy">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">💾 Zapisz</button>
                    <a asp-controller="Group" asp-action="Index" class="btn btn-secondary">🔙 Powrót</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
