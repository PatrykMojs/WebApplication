@model SchoolRegister.ViewModels.VM.AttachDetachStudentToGroupVm

@{
    ViewData["Title"] = "Przypisz Studenta do Klasy";
}

<h2 class="text-center mt-4">Przypisz Studenta do Klasy</h2>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4>Wybierz Studenta do przypisania</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Group" asp-action="AssignStudents" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="GroupId" />

                <div class="form-group">
                    <label>Wybierz Studenta</label>
                    <select asp-for="StudentId" asp-items="@(new SelectList(ViewBag.Students, "Id", "FullName"))" class="form-control" required></select>
                </div>

                <button type="submit" class="btn btn-success mt-3">✔ Przypisz</button>
                <a asp-controller="Group" asp-action="Index" class="btn btn-secondary mt-3">⬅ Anuluj</a>
            </form>
        </div>
    </div>
</div>
