@model IEnumerable<SchoolRegister.ViewModels.VM.StudentVm>

@{
    ViewData["Title"] = "Lista Uczniów";
}

<h2 class="text-center mt-4">👨‍🎓 Uczniowie w klasie: @ViewBag.GroupName</h2>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white text-center">
            <h4>👩‍🎓 Lista Uczniów</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover table-striped text-center">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Imię i Nazwisko</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.Id</td>
                                <td>@student.FirstName @student.LastName</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted">Brak uczniów w tej klasie.</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Group" asp-action="Index" class="btn btn-secondary">🔙 Powrót do listy klas</a>
        </div>
    </div>
</div>
