@model IEnumerable<SchoolRegister.ViewModels.VM.TeacherVm>

@{
    ViewData["Title"] = "Lista Nauczycieli";
}

<h2 class="text-center mt-4">📚 Lista Nauczycieli</h2

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4>👩‍🎓 Lista Nauczycieli</h4>
        </div>
        <div class="card-body">
            <a asp-controller="Teacher" asp-action="Create" class="btn btn-success mb-3">➕ Dodaj nowego nauczyciela</a>
            <table class="table table-hover table-striped text-center">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Imię i Nazwisko</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var teacher in Model)
                        {
                            <tr>
                                <td>@teacher.Id</td>
                                <td>@teacher.FirstName @teacher.LastName</td>
                                <td>
                                    <a asp-controller="Teacher" asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-info btn-sm">📄 Szczegóły</a>
                                    <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@teacher.Id" class="btn btn-warning btn-sm">✏️ Edytuj</a>
                                    <a asp-controller="Teacher" asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Czy na pewno chcesz usunąć tego nauczyciela?')">🗑 Usuń</a>

                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">Brak nauczycieli do wyświetlenia.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
