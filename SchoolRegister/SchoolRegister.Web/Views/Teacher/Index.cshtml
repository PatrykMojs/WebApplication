@model IEnumerable<TeacherVm>

@{
    ViewData["Title"] = "Lista Nauczycieli";
}

<h2>Lista Nauczycieli</h2>

<table class="table">
    <thead>
        <tr>
            <th>ImiÄ™</th>
            <th>Nazwisko</th>
            <th>Przedmioty</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
