@model SchoolRegister.ViewModels.VM.TeacherVm

@{
    ViewData["Title"] = "Edytuj Nauczyciela";
}

<h2 class="text-center mt-4">‚úè Edycja Nauczyciela</h2>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h4>Edytuj: @Model.FirstName @Model.LastName</h4>
        </div>
        <div class="card-body">
            <form asp-controller="Teacher" asp-action="Edit" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label>Imiƒô</label>
                    <input asp-for="FirstName" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Nazwisko</label>
                    <input asp-for="LastName" class="form-control" required />
                </div>

                <div class="form-group">
                    <label>Tytu≈Ç</label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="form-group">
                    <label>Przedmioty</label>
                    <select asp-for="SubjectIds" asp-items="@(new SelectList(ViewBag.Subjects, "Id", "Name"))" multiple class="form-control"></select>
                </div>

                <button type="submit" class="btn btn-success">üíæ Zapisz</button>
                <a asp-controller="Teacher" asp-action="Index" class="btn btn-secondary">‚¨Ö Anuluj</a>
            </form>

        </div>
    </div>
</div>
