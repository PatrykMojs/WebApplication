<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Ghibli App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-page="/Index" aria-label="Ghibli Explorer">
                <img src="~/img/logo.svg" width="28" height="28" alt="logo">
                <span class="d-none d-sm-inline">Ghibli Explorer</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navMain">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Films") ? "active" : "")"
                           asp-page="/Films">Films</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Gallery") ? "active" : "")"
                           asp-page="/Gallery">Gallery</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4 flex-grow-1">
        @RenderBody()
    </main>

    <footer class="footer mt-auto">
        <div class="container">
            <small>© @DateTime.Now.Year Ghibli Explorer • Built with ASP.NET Core Razor Pages • <strong>Author: </strong>Patryk Meus</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
